body {
    margin: 0;
    padding: 0;

    background-color: black;
    color: #878787;

    font-family: "Josefin Sans";
    font-weight: 600;
    font-size: 16px;
}

h1 {
    font-weight: 700;
    margin: 0;
    padding: 0;
    font-size: 3em;
    line-height: 0.7em;
    letter-spacing: -4px;
    padding-top: 14px;
    margin-bottom: -2px;
}

p {
    margin: 0;
    padding: 0;
    font-size: 1.4em;
}

@media (max-height: 1000px) {
    body {
        font-size: 16px;
    }
}
@media (min-height: 1000px) and (max-height: 2000px) {
    body {
        font-size: 24px;
    }
}
