input[type=range].normal {
  -webkit-appearance: none;
  width: 100%;
  height: 50%;
  padding: 0;
  margin: 0;

  &:focus {
      outline: none;
  }

  &::-webkit-slider-runnable-track {
    width: 100%;
    height: 100%;
    cursor: pointer;
    background: #00c6ff;
  }

  &::-webkit-slider-thumb {
    -webkit-appearance: none;
    height: 100%;
    width: 21%;
    background: black;
    cursor: pointer;
    border-radius: 0;
    border: none;
  }

  &::-moz-range-track {
    width: 100%;
    height: 100%;
    cursor: pointer;
    background: #00c6ff;
  }
  &::-moz-range-thumb {
    height: 100%;
    width: 21%;
    background: black;
    cursor: pointer;
    border-radius: 0;
    border: none;
  }
}
