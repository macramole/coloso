body {
    margin: 0;
    padding: 0;

    background-color: black;
    color: #878787;

    font-family: "Josefin Sans";
    font-weight: 600;
}

h1 {
    font-weight: 700;
    margin: 0;
    padding: 0;
    font-size: 3em;
    line-height: 0.7em;
    letter-spacing: -4px;
    padding-top: 14px;
    margin-bottom: -2px;
}

p {
    margin: 0;
    padding: 0;
    font-size: 1.4em;
}

#mainWrapper {
    text-align: center;

    #title {
        height: 10%;
        overflow: hidden;
        background-color: white;
        color: black;
        text-align: left;
    }

    #content {
        margin: 0 auto;
        overflow: hidden;
    }

    #coloso {
        height: 60%;
        position: relative;

        object {
            height: 100%;
            transition: transform 1s;

            &.zoom {
                transform: scale(3,3) translate(0,32%);
            }
        }

        #btnCerrar {
            position: absolute;
            top: 20px;
            left: 0;
            cursor: pointer;
            opacity: 0;
            width: 8%;

            &.visible {
                opacity: 1;
            }
        }

        #colores {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            list-style: none;
            margin: 0;
            padding: 0;
            height: 17%;

            li {
                float: left;
                height: 100%;
                width: 17.6%;
                margin-right: 3%;
                cursor: pointer;

                &:last-child {
                    margin-right: 0;
                }
            }

            opacity: 0;

            &.visible {
                opacity: 1;
            }
        }
    }

    #areas {
        height: 5%;
        text-transform: uppercase;
        font-weight: 700;
        font-size: 1.2em;
        border-top: 2px solid #525252;
        padding-top: 10px;
        box-sizing: border-box;

    }

    #animation {
        // background-color: red;
        height: 25%;
        background-color: white;

        .framesWrapper {
            height: 20%;
            list-style: none;
            margin: 0;
            padding: 0;
            text-align: left;
            font-size: 0;

            li {
                display: inline-block;
                height: 100%;
                margin-left: 0.76%;
                cursor: pointer;

                &:first-child {
                    margin-left: 0;
                }

                &.flecha {
                    img {
                        height: 100%;
                        display: inline-block;
                    }
                }

                &.frame {
                    width: 8%;
                    height: 100%;
                    background-color: #878787;

                    .circulo {
                        background-color: none;
                        border: 1px solid black;
                        width: 50%;
                        height: 50%;
                        border-radius: 20px;
                        position: relative;
                        left: 25%;
                        top: 25%;
                    }

                    &.selected {
                        background-color: #3A3A3A;

                        .circulo {
                            background-color: #ff00ab;
                            border: 0;
                        }
                    }
                }

            }

            // #frames {
            //     width: 80%;
            //     height: 100%;
            //     display: inline-block;
            // }
        }

        #buttons {
            margin-top: 0.5em;


            button {
                color: #fff;
                background: none;
                border: none;
                cursor: pointer;
                font-family: inherit;
                font-size: 1.6em;
                padding: 0.4em 0.6em 0.2em 0.6em;
                font-weight: 900;

            }
            #btnPlay {
                background-color: #ff00ab;
            }
            #btnBorrar {
                background-color: #b3b3b3;
            }
            #btnCopy {
                background-color: black;
            }
            #btnPaste {
                background-color: black;
            }
        }
    }
}
