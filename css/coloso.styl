#mainWrapper {
    text-align: center;

    #title {
        height: 10%;
        overflow: hidden;
        background-color: #fff;
        color: #000;
        text-align: left;
        font-size: 1.2em;
        // padding-top: 1%;
        box-sizing: border-box;

        .info {
            float: left;
            width: 80%;
        }
        .logo {
            float: right;
            width: 20%;
            text-align: right;
            padding: 3% 1% 0 0;
            box-sizing: border-box;

            img {
                width: 43%;
            }
        }
    }

    #content {
        margin: 0 auto;
        overflow: hidden;
    }

    #coloso {
        height: 60%;
        position: relative;
        overflow: hidden;



        object {
            height: 100%;
            transition: transform 0.7s;

            &.zoom {
                transform: scale(2.8, 2.8) translate(0, 28%);
            }
        }

        #btnCerrar {
            position: absolute;
            top: 20px;
            left: 0;
            cursor: pointer;
            opacity: 0;
            width: 8%;
            z-index: 20;

            &.visible {
                opacity: 1;
            }
        }

        #colores {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            list-style: none;
            margin: 0;
            padding: 0;
            height: 17%;

            li {
                float: left;
                height: 100%;
                width: 17.6%;
                margin-right: 3%;
                cursor: pointer;

                &:last-child {
                    margin-right: 0;
                }
            }

            visibility: hidden;

            &.visible {
                visibility: visible;
            }
        }

        #presets {
            background-color: #363636;
            height: 29%;
            position: absolute;
            bottom: 17%;
            left: 0;
            width: 100%;
            padding: 5% 0 2%;
            visibility: hidden;

            > div {
                width: 80%;
                margin: 0px auto;
                text-align: center;
                visibility: hidden;

                &.visible {
                    visibility: visible;
                }
            }

            img {
                margin-left: 6%;
                width: 17%;
                display: inline;

                &:first-child, &.nomargin {
                    margin-left: 0;
                }
            }

            &.visible {
                visibility: visible;
            }
        }
    }

    #areas {
        height: 5%;
        text-transform: uppercase;
        font-weight: 700;
        font-size: 1.2em;
        border-top: 2px solid #525252;
        padding-top: 10px;
        box-sizing: border-box;

        span.flecha {
        	position: relative;
        	top: -2px;
        	display: inline-block;
        }

    }

    #animation {
        // background-color: red;
        height: 25%;
        background-color: white;

        .framesWrapper {
            height: 20%;
            list-style: none;
            margin: 0;
            padding: 0;
            text-align: left;
            font-size: 0;

            li {
                display: inline-block;
                height: 100%;
                margin-left: 0.5%;
                cursor: pointer;

                &:first-child {
                    margin-left: 0;
                }

                &.flecha {
                    img {
                        height: 100%;
                        display: inline-block;
                    }
                }

                &.frame {
                    width: 8%;
                    height: 100%;
                    background-color: #878787;

                    .circulo {
                        background-color: none;
                        border: 1px solid black;
                        width: 50%;
                        height: 50%;
                        border-radius: 20px;
                        position: relative;
                        left: 25%;
                        top: 25%;
                    }

                    &.selected {
                        background-color: #3A3A3A;

                        .circulo {
                            background-color: #ff00ab;
                            border: 0;
                        }
                    }
                }

            }

            // #frames {
            //     width: 80%;
            //     height: 100%;
            //     display: inline-block;
            // }
        }

        #buttons {
            margin-top: 0.5em;


            button {
                color: #fff;
                background: none;
                border: none;
                cursor: pointer;
                font-family: inherit;
                font-size: 1.6em;
                padding: 0.4em 0.6em 0.2em 0.6em;
                font-weight: 900;

                span {
                    position: relative;
                    top: -3px;
                    margin-left: 0.3em;
                    display: inline-block;
                    margin-top: -7px;
                }

            }
            #btnPlay {
                background-color: #ff00ab;
            }
            #btnBorrar {
                background-color: #b3b3b3;
            }
            #btnCopy {
                background-color: black;
            }
            #btnPaste {
                background-color: black;
            }
        }
    }
}
